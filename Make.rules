#.SILENT:


## Default rules
default-build: build-subdirs

default-install: install-generic install-subdirs

default-clean: clean-subdirs
	rm -f *~ *.pyc *.pyo *.orig *.o *.rej *.so $(generated_files)


## Subdirectory rules
build-subdirs:
ifdef SUBDIRS
	for d in $(SUBDIRS); do make -C $$d DIR=$(DIR)/$$d || exit 1; done
endif

clean-subdirs:
ifdef SUBDIRS
	for d in $(SUBDIRS); do make -C $$d DIR=$(DIR)/$$d clean || exit 1; done
endif

install-subdirs:
ifdef SUBDIRS
	for d in $(SUBDIRS); do make -C $$d DIR=$(DIR)/$$d install || exit 1; done
endif


## Generic install rules
install-generic:
ifdef install_files
	mkdir -p $(DESTDIR)$(DEST)
	cp -a $(install_files) $(DESTDIR)$(DEST)/
endif


## C rules
%.o : %.c
	gcc $(PY_CFLAGS) -c -o $@ $<
%.so : %.o
	gcc $(PY_LDFLAGS) -o $@ $+


# NB: This only needs to be used at the top of an installed tree.
compile-python:
	$(PYTHON) -c 'import compileall; compileall.compile_dir("$(DESTDIR)$(DEST)", ddir="$(DEST)", quiet=1)'
	$(PYTHON) -OO -c 'import compileall; compileall.compile_dir("$(DESTDIR)$(DEST)", ddir="$(DEST)", quiet=1)'

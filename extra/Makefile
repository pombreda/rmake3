# these are autogenerated from .in files, and removed by "make clean"!
generated_files = rmake.init rmake-node.init server_defaults.conf node_defaults.conf

all: $(generated_files) default-build

install: $(generated_files) default-install
	install -D -m755 rmake.init $(DESTDIR)$(initdir)/$(PKGNAME)
	install -D -m755 rmake-node.init $(DESTDIR)$(initdir)/$(PKGNAME)-node
	mkdir -p $(DESTDIR)$(confdir)
	echo "includeConfigFile server.d/*.conf" >$(DESTDIR)$(confdir)/serverrc
	echo "includeConfigFile node.d/*.conf" >$(DESTDIR)$(confdir)/noderc
	install -D -m0644 server_defaults.conf $(DESTDIR)$(confdir)/server.d/05_defaults.conf
	install -D -m0644 node_defaults.conf $(DESTDIR)$(confdir)/node.d/05_defaults.conf
	mkdir -p $(DESTDIR)$(logdir)
	mkdir -p $(DESTDIR)$(sockdir)
	mkdir -p $(DESTDIR)$(servicedir)
	mkdir -p $(DESTDIR)$(servicedir)/lock

rmake.init: rmake.init.in ../Make.defs ../Makefile
	sed \
	    -e 's^@bindir@^$(bindir)^g' \
	    -e 's^@sbindir@^$(sbindir)^g' \
	    -e 's^@confdir@^$(confdir)^g' \
	    -e 's^@logdir@^$(logdir)^g' \
	    $< > $@

rmake-node.init: rmake.init
	sed \
	    -e 's/^prog=.*/prog=rmake-node/' \
	    -e 's/^desc=.*/desc="rMake Worker Node"/' \
	    -e 's/^# chkconfig:.*/# chkconfig: 345 82 18/' \
	    -e 's/serverrc/noderc/g' \
	    $< > $@

server_defaults.conf: Makefile ../Make.defs
	> $@
	echo "logDir $(logdir)" >> $@
	echo "pluginDirs $(plugindir)" >> $@
	echo "dataDir $(servicedir)" >> $@
	echo "sslCertPath $(servicedir)/certs/rmake-server-cert.pem" >> $@
	echo "listenPath /var/lib/$(PKGNAME)/socket" >> $@

node_defaults.conf: Makefile ../Make.defs
	> $@
	echo "lockDir $(servicedir)/lock" >> $@
	echo "logDir $(logdir)" >> $@
	echo "pluginDirs $(plugindir)" >> $@
	echo "slots 2" >> $@

clean: default-clean


include ../Make.rules
include ../Make.defs

# vim: set sts=8 sw=8 noexpandtab :

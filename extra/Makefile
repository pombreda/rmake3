# these are autogenerated from .in files, and removed by "make clean"!
generated_files = rmake.init rmake-node.init

all: $(generated_files) default-build

install: $(generated_files) default-install
	install -D -m755 rmake.init $(DESTDIR)$(initdir)/rmake
	install -D -m755 rmake-node.init $(DESTDIR)$(initdir)/rmake-node

$(generated_files) : % : %.in ../Make.defs ../Makefile
	sed -e 's^@rmakepath@^$(rmakepath)^g' \
	    -e 's^@conarypath@^$(libdir)/python2.4/site-packages/conary^g'  \
	    -e 's^@version@^$(VERSION)^g' \
	    -e 's^@ccsversion@^$(CCSVERSION)^g' \
	    -e 's^@bindir@^$(bindir)^g' \
	    -e 's^@sbindir@^$(sbindir)^g' \
	    -e 's^@sysconfdir@^$(sysconfdir)^g' $< > $@

clean: default-clean


include ../Make.rules
include ../Make.defs


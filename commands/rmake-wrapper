bindir=$(dirname $0)
bin=$(basename $0)
importdir=$(cd $bindir/.. 2> /dev/null && pwd -P;)
export PYTHONPATH=$importdir:$CONARY_PATH:$PYTHONPATH
declare -a config
config=("--config=pluginDirs $importdir/rmake_plugins")

if [ "$bin" = "rmake-node" ]; then
    # multi-node rmake worker
    config=("$config"
            "--config=pluginOption build helperDir $importdir/commands"
            )
fi

exec $importdir/commands/$bin ${config:+"${config[@]}"} "$@"
